                    print(f"SubTotal: {valorTotal: .2f}")
                    print(f"Total a pagar: {inflacao: .2f}")
                    break
            
            except ValueError :
                print("Escolha uma forma de pagamento válida...")
            
while valorAcrescimo > 1:
